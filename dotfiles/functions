# bash_functions
# vim: filetype=sh
# DESCRIPTION: user defined functions called by .bashrc or .bash_profile

# Opens URL parameters in Chrome tabs
function google()
{
    "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome" "$@" &
}

# Moves file/dir to OSX trash directory
function trash(){
    mv $1 ~/.Trash
}

# History with tail and grep.
function htg(){
    tailn=$1
    shift 1
    history | tail -n $tailn | grep $@
}

# Load conda environment with development dependencies
function conda_dev(){
    conda env update -f $dotfiles/conda-dev.yml
}
