[alias]
plog = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
splog = log --all --decorate --oneline --graph
st = status
current = rev-parse --abbrev-ref HEAD
cm = commit -m
b = branch
co = checkout
nb = checkout -b
com = checkout main
plo = pull origin
plom = pull origin main
pho = push origin
phom = push origin main
rem = rebase main
del = branch -D -d
unstage = reset HEAD
tags = tag -l
ba = branch -a
remotes = remote -v
rh = reset --hard
purge = "!sh -c 'git reset --hard; git clean -df'"
ctags = "!sh -c .git/hooks/ctags"
cp = cherry-pick
dbr = "!sh -c 'git branch | grep sjh | xargs -I{} git del {}'"

[color]
diff = auto
status = auto
branch = auto
interactive = auto
ui = true
pager = true

[core]
editor = vim

[push]
default = current

[pull]
default = current
rebase = false

[init]
templatedir = ~/.git_template
defaultBranch = main

[includeIf "gitdir:~/src/riot/"]
path = .gitconfig-work

[includeIf "gitdir:~/go/"]
path = .gitconfig-work

[includeIf "gitdir:~/src/personal/"]
path = .gitconfig-personal

[includeIf "gitdir:~/src/cli/"]
path = .gitconfig-personal
